<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
	   android:paddingLeft="10dip" 
	   android:paddingRight="10dip" 
		android:background="@drawable/shape">
		
	<ScrollView	
		android:layout_height="wrap_content"
		android:layout_width="fill_parent">
	
		
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent">
		
	   <RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" >
	<LinearLayout
		android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginTop="5dip"
		android:layout_alignParentRight="true">
		
		<TextView
	style="@style/lightText"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:text="Logged in as: " />
		   
		<TextView
	style="@style/lightText" 
		   android:id="@+id/name"
		   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:text="name" />
	</LinearLayout>
	</RelativeLayout>
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
	   android:paddingLeft="10dip" 
	   android:paddingRight="10dip" >

	<ImageView
	   android:id="@+id/logo" 
	   android:src="@drawable/logo"
	   android:layout_width="wrap_content"
	   android:layout_marginTop="15dip"
	   android:layout_height="75dip"/>
	   </LinearLayout>

		
		
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		>
		
	
		
	<LinearLayout
		android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
	   android:paddingTop="25dip"
		android:paddingLeft="20dip"
		android:paddingRight="20dip"
		 >
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight=".5">
			<ImageView
			   android:src="@drawable/plannerart"
			   android:layout_width="100dp"
			   android:layout_height="100dp"
			   android:clickable="true"
			   android:onClick="gotoMyMeetings" />
			<TextView
	style="@style/mainpageText"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:clickable="true"
			   android:onClick="gotoMyMeetings"
			   android:text="My Meetings" />
		</LinearLayout>

		
		<LinearLayout
			android:orientation="vertical"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_marginLeft="15dip"
            android:gravity="center_horizontal"
            android:layout_weight=".5">
			<ImageView
			   android:src="@drawable/plussign"
			   android:layout_width="100dp"
			   android:layout_height="100dp"
			   android:clickable="true"
			   android:onClick="createMeeting" />
			<TextView
	style="@style/mainpageText"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:clickable="true"
			   android:onClick="createMeeting"
			   android:text="Create Meeting" />
		</LinearLayout>
	</LinearLayout>
	
	

		
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginTop="50dip"
		>
			
	<LinearLayout
		android:orientation="horizontal"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content">
		<ImageView
		   android:src="@drawable/nextmeeting"
		   android:paddingBottom="0dip" android:layout_width="225dip" android:layout_height="50dp"/>
		   
		   
	    <ImageView
		   android:id="@+id/displaytrackbutton"
		   android:src="@drawable/map_1"
		   android:layout_width="40dip"
		   android:layout_height="40dip"
		   android:layout_marginLeft="10dip"
		   android:clickable="true"
		   android:layout_gravity="top"
		   android:onClick="track"
		   />
		   
		   </LinearLayout>
	<LinearLayout
		   android:id="@+id/nextmeetingview"
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_marginLeft="15dip"
		android:clickable="true"
		android:onClick="gotomeeting"
		>
		
			<LinearLayout
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			   android:paddingTop="5dip"
			   android:paddingBottom="5dip"
				>
			<TextView
				style="@style/headerText"
			   android:id="@+id/nomeeting"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:text="You have no upcoming meetings"/>
			
			<TextView
				style="@style/headerText"
			   android:id="@+id/mnexttitle"
			   android:layout_width="180dip"
			   android:layout_height="wrap_content"
			   android:singleLine="true"
			   android:text="Meeting title"/>
	            
			<TextView
			   style="@style/secondaryText"
			   android:id="@+id/mdate"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:layout_marginLeft="10dip"
			   android:text="Date" />
            
            </LinearLayout>
	
		<LinearLayout
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			>
			<TextView
			   style="@style/lightText"
			   android:id="@+id/mcreator"
			   android:layout_width="180dip"
			   android:layout_height="wrap_content"
			   android:singleLine="true"
			   android:text="Creator" />
			   
			   
	
			<TextView
			   style="@style/secondaryText"
			   android:id="@+id/mtime"
			   android:layout_width="wrap_content"
			   android:layout_height="wrap_content"
			   android:layout_marginLeft="10dip"
			   android:text="Time" />
		   
		   </LinearLayout>
	</LinearLayout>
	</LinearLayout>
	
	</LinearLayout>
	</LinearLayout>
	</ScrollView>
</LinearLayout>

