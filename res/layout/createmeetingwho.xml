<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@drawable/shape"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
	style="@style/CMnotselected"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center_horizontal"
            android:text="What"/>

        <TextView
	style="@style/CMselected"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center_horizontal"
            android:text="Who"/>

        <TextView
	style="@style/CMnotselected"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center_horizontal"
            android:text="When"/>

        <TextView
	style="@style/CMnotselected"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center_horizontal"
            android:text="Where"/>

    </LinearLayout>
<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
           <View
	style="@style/CMprogress"
        android:layout_height="2dip"
        android:layout_width="wrap_content"
        android:layout_weight=".5"/>
           <View
        android:layout_height="2dip"
        android:layout_width="wrap_content"
        android:layout_weight=".5" />
</LinearLayout>


<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    android:padding="5dp"
        android:layout_weight="1">
    <AutoCompleteTextView android:id="@+id/autocomplete_names"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:hint="Search Names"/>
    <ListView
	style="@style/secondaryText"
	 android:layout_width="match_parent"
        android:id="@+id/contactList"
        android:layout_height="wrap_content" android:cacheColorHint="@color/bgblue"/>
</LinearLayout>

    
       <LinearLayout
       		android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
       		android:weightSum="1"
    		android:layout_alignParentBottom="true" >
	        
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Back"
            android:layout_weight="0.33"
            android:onClick="back"
             />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_weight="0.33"
            android:onClick="cancel" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Next"
            android:onClick="next"
            android:layout_weight="0.33" />

		</LinearLayout>

</LinearLayout>