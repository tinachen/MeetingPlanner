<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:background="@drawable/shape"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
	style="@style/CMnotselected"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center_horizontal"
            android:text="What"/>

        <TextView
	style="@style/CMnotselected"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center_horizontal"
            android:text="Who"/>

        <TextView
	style="@style/CMselected"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center_horizontal"
            android:text="When"/>

        <TextView
	style="@style/CMnotselected"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:gravity="center_horizontal"
            android:text="Where"/>

    </LinearLayout
    >
<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
           <View
	style="@style/CMprogress"
        android:layout_height="2dip"
        android:layout_width="wrap_content"
        android:layout_weight=".25"/>
           <View
        android:layout_height="2dip"
        android:layout_width="wrap_content"
        android:layout_weight=".75"/>
</LinearLayout>

<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingTop="50dip"
	android:paddingLeft="30dip"
	android:paddingRight="30dip">
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dip">
			<TextView
	style="@style/secondaryText"
			 android:id="@+id/date_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Date: "
		        android:layout_centerVertical="true"/>
		    <Button android:id="@+id/pickDate"
		        android:layout_height="wrap_content"
		        android:text="Change date"
		         android:layout_width="150dp"
            	android:layout_alignParentRight="true"
            	android:onClick="changeDate"/>
	</RelativeLayout>
	
	<!-- start time -->
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dip">		
	    <TextView
	style="@style/secondaryText"
	 android:id="@+id/startTime_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Start time: "
		    android:layout_centerVertical="true" />
	    <Button android:id="@+id/startPickTime"
		        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:text="Change start time"
            	android:layout_alignParentRight="true"
            	android:onClick="changeStart"/>
	
	</RelativeLayout>
	
	<!-- end time -->
	<RelativeLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
		android:layout_marginTop="10dip">
		
	    <TextView
	style="@style/secondaryText"
	android:id="@+id/endTime_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="End time: "
		        android:layout_centerVertical="true" />
	    <Button android:id="@+id/endPickTime"
		        android:layout_width="150dp"
		        android:layout_height="wrap_content"
		        android:text="Change end time"
            	android:layout_alignParentRight="true"
            	android:onClick="changeEnd"/>
	</RelativeLayout>
	
	<!-- start tracking __ hours before -->
	<RelativeLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
		android:layout_marginTop="10dip">
		<TextView
	style="@style/secondaryText"
	android:id="@+id/spinner_label1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Track time: "
		        android:layout_centerVertical="true" />
		<Spinner 
	        android:id="@+id/tracker_selector"
		        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:prompt="@string/tracker_prompt"
            	android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
	    />
	</RelativeLayout>
</LinearLayout>
    
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        
       <LinearLayout
       		android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
       		android:weightSum="1"
    		android:layout_alignParentBottom="true" >
	        
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Back"
            android:layout_weight="0.33"
            android:onClick="back"
             />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_weight="0.33"
            android:onClick="cancel" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Next"
            android:onClick="next"
            android:layout_weight="0.33" />

		</LinearLayout>
    </RelativeLayout>

</LinearLayout>