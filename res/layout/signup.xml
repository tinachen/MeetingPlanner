<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
<LinearLayout
	android:orientation="vertical"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:paddingLeft="30dip"
	android:paddingRight="30dip"
	android:paddingTop="20dip"
	android:background="@drawable/shape">
		
	<ImageView
	   android:id="@+id/signup"
	   android:src="@drawable/signup"
	   android:paddingBottom="0dip" android:layout_width="200dip" android:layout_height="75dp"/>
	<ImageView
	    android:id="@+id/facebook"
	    android:src="@drawable/fbconnect"
	    android:paddingBottom="0dip" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	<ImageView
	    android:id="@+id/or"
	    android:src="@drawable/or"
	    android:paddingBottom="0dip" android:layout_width="fill_parent" android:layout_height="25dp"/>
	   
	   
	<LinearLayout
	android:orientation="horizontal"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
		
	<ImageView
	   android:src="@drawable/camera" 
	   android:layout_width="100dip" 
	   android:layout_height="100dp"
	   android:clickable="true"
	   android:onClick="takepic"/>
		
		
		<LinearLayout 
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_marginLeft="5dip">
		<EditText
	    	android:id="@+id/fname"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:hint="First Name"
			android:singleLine="true"
			android:layout_marginTop="5dip" />	
		
		<EditText
	    	android:id="@+id/lname"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dip"
			android:singleLine="true"
			android:hint="Last Name" />	
		
		</LinearLayout>
	</LinearLayout>
	
	<EditText
    	android:id="@+id/email"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dip"
		android:singleLine="true"
		android:hint="Email" />	
	<EditText
    	android:id="@+id/phone"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:phoneNumber="true"
		android:layout_marginTop="5dip"
		android:singleLine="true"
		android:hint="Phone number" />	
	<EditText
   		android:id="@+id/pw"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:password="true"
		android:hint="Password" 
		android:singleLine="true"
		android:layout_marginTop="5dip"/>	
	<EditText
   		android:id="@+id/pw2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:password="true"
		android:hint="Retype Password" 
		android:singleLine="true"
		android:layout_marginTop="5dip"/>		
	<Button
	    android:id="@+id/submit"
	    android:background="@drawable/button_shape"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:onClick="submit"
		android:text="Submit"
		android:layout_marginTop="25dip" 
		android:layout_marginBottom="10dip"/>
</LinearLayout>
</ScrollView>