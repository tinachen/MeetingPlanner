<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:weightSum="1">
		

		<ImageView
		   android:id="@+id/trackerlist"
		   android:src="@drawable/trackeretalist"
		   android:layout_width="150dp" android:layout_marginLeft="15dip"
		   android:layout_marginRight="15dip" android:layout_height="100dp" android:layout_weight="0.20"/>
		
		<Button
			android:text="To Map" 
			android:onClick="toMap" android:layout_height="60dip" android:layout_width="120dip"
			android:layout_marginTop="20dip"/>
	</LinearLayout>

<TextView
		   android:src="@drawable/trackeretalist"
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"
		   android:text="ETA list goes here..........."/>


</LinearLayout>