<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5px">

<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<!--attendee's picture goes here-->
	<ImageView 
		android:id="@+id/pic" 
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_marginRight="25px"
		/>
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<!--name goes here-->
		<TextView
			android:id="@+id/name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			/>
		
		<!--eta goes here-->
		<TextView
			android:id="@+id/eta"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			/>
		
	</LinearLayout>

</LinearLayout>

<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<!--call button goes here NEED TO CHANGE TO A REAL BUTTON-->
	<TextView
		android:text="call"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_marginLeft="30px"
		android:layout_marginRight="40px"
		/>
	
	<!--msg button goes here NEED TO CHANGE TO A REAL BUTTON-->
	<TextView
		android:text="msg"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		/>
	
</LinearLayout>

</LinearLayout>