<?xml version="1.0" encoding="utf-8"?>

<!-- the main container -->
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
	<!-- form label -->
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		<TextView
			android:id="@+id/form_label" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
	</LinearLayout>

	<!-- meeting name -->
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		<TextView
			android:id="@+id/mname_label" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Meeting Name: "/>
		<EditText
			android:id="@+id/mname_field"
			android:hint="Untitled" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />		
	</LinearLayout>
	
	
	<!-- choose date -->
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		<TextView android:id="@+id/date_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Date: "/>
		<TextView android:id="@+id/dateDisplay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""/>
	    <Button android:id="@+id/pickDate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Set date"/>
	</LinearLayout>
	
	<!-- start time -->
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">		
	    <TextView android:id="@+id/startTime_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Start time: "/>
	    <TextView android:id="@+id/startTimeDisplay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""/>
	    <Button android:id="@+id/startPickTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Set start time"/>
	
	</LinearLayout>
	
	<!-- end time -->
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		
	    <TextView android:id="@+id/endTime_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="End time: "/>
	    <TextView android:id="@+id/endTimeDisplay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=""/>
	    <Button android:id="@+id/endPickTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Set end time"/>
	</LinearLayout>
	
	<!-- start tracking __ hours before -->
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		<TextView android:id="@+id/spinner_label1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Start tracking "/>
		<Spinner 
	        android:id="@+id/tracker_selector"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:prompt="@string/tracker_prompt"
	    />
		<TextView android:id="@+id/endTimeDisplay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" hours before start time"/>
	</LinearLayout>
	
	<!-- buttons -->
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		 <Button android:id="@+id/selectLocation"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Select location"
				android:onClick="selectLocation" />
	</LinearLayout>

	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	     <Button android:id="@+id/addPeople"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="saveMeeting"
			    android:text="Save and Invite"/>
	</LinearLayout>
</LinearLayout>