<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dip"
    android:paddingRight="5dip">
         
    <TextView android:id="@+id/mloc"
         android:focusable="false"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Location here"
         android:textSize="25px"
         android:layout_marginTop="5dip"/>
         
    <TextView android:id="@+id/mtrack"
         android:focusable="false"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="track time here"
         android:textSize="25px"
         android:layout_marginTop="5dip"/>
         
         
    <TextView android:id="@+id/mdesc"
         android:focusable="false"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Description here"
         android:textSize="25px"
         android:layout_marginTop="5dip"/>
         
    <TextView android:id="@+id/mppl"
         android:focusable="false"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Attendees here"
         android:textSize="25px"
         android:layout_marginTop="5dip"/>
           
    <LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
         android:layout_marginTop="5dip">
		<Button android:layout_width="100dip" 
				android:layout_height="wrap_content"
				android:focusable="false" 
				android:clickable="true"
				android:text="Edit" 
				android:id="@+id/editBtn"
				android:onClick="editButtonClicked"/>
	           
		<Button android:layout_width="100dip" 
				android:layout_height="wrap_content"
				android:focusable="false" 
				android:clickable="true"
				android:text="Track" 
				android:id="@+id/trackBtn"
				android:onClick="track"/>
	</LinearLayout>
</LinearLayout>
