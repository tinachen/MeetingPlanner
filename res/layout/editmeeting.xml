<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">
    
<!-- the main container -->
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="30dip"
	android:paddingRight="30dip">
	
	<!-- form label -->
	<LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		<TextView
			android:id="@+id/form_label" 
			android:textSize="40px"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:text="Edit meeting"/>
	</LinearLayout>

	<!-- meeting name -->
	<EditText
		android:id="@+id/mname_field"
		android:textSize="20px"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:hint="Meeting Title"/>	

    <EditText
        android:id="@+id/desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:lines="4"
		android:gravity="top"
		android:hint="Description" />
	
	
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dip">
			<TextView android:id="@+id/date_label"
				android:textSize="20dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Date: "
		        android:layout_centerVertical="true"/>
		    <Button android:id="@+id/pickDate"
		        android:layout_height="wrap_content"
		        android:text="Change date"
		         android:layout_width="150dp"
            	android:layout_alignParentRight="true"
            	android:onClick="changeDate"/>
	</RelativeLayout>
	
	<!-- start time -->
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dip">		
	    <TextView android:id="@+id/startTime_label"
			android:textSize="20dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Start time: "
		    android:layout_centerVertical="true" />
	    <Button android:id="@+id/startPickTime"
		        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:text="Change start time"
            	android:layout_alignParentRight="true"
            	android:onClick="changeStart"/>
	
	</RelativeLayout>
	
	<!-- end time -->
	<RelativeLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
		android:layout_marginTop="3dip">
		
	    <TextView android:id="@+id/endTime_label"
			android:textSize="20dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="End time: "
		        android:layout_centerVertical="true" />
	    <Button android:id="@+id/endPickTime"
		        android:layout_width="150dp"
		        android:layout_height="wrap_content"
		        android:text="Change end time"
            	android:layout_alignParentRight="true"
            	android:onClick="changeEnd"/>
	</RelativeLayout>
	
	<!-- start tracking __ hours before -->
	<RelativeLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
		android:layout_marginTop="3dip">
		<TextView android:id="@+id/spinner_label1"
			android:textSize="20dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Track time: "
		        android:layout_centerVertical="true" />
		<Spinner 
	        android:id="@+id/tracker_selector"
		        android:layout_width="150dp"
	        android:layout_height="wrap_content"
	        android:prompt="@string/tracker_prompt"
            	android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
	    />
	</RelativeLayout>
	
	<!-- buttons -->
	<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
		 <Button android:id="@+id/selectLocation"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="Select location"
				android:onClick="selectLocation"
		android:layout_marginTop="3dip" />
				
	     <Button android:id="@+id/addPeople"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:onClick="invite"
			    android:text="Invite"
		android:layout_marginTop="3dip"/>
				
	     <Button android:id="@+id/addPeople"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:onClick="saveMeeting"
			    android:text="Save"
		android:layout_marginTop="3dip"/>
	</LinearLayout>
</LinearLayout>
</ScrollView>